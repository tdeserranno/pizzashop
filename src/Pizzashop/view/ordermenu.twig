<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Home</title>
        <link rel="stylesheet" href="/pizzashop/public/css/bootstrap.min.css">
        <script src="/pizzashop/public/css/bootstrap.min.css"></script>
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-default row">
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="/pizzashop/menu/show/pizza">Menu</a></li>
                    {% if session.user is defined and session.user.admin != 1%}
                        <li><a href="/pizzashop/order/go/">Bestel</a></li>
                    {% endif %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                {% if session.user is not defined %}
                    <li><a href="/pizzashop/auth/go/">Log in</a></li>
                {% else %}
                    {% if session.user.admin == 1 %}
                    <li><a href="/pizzashop/admin/go/">Beheer</a></li>
                    {% endif %}
                    <li><a href="/pizzashop/auth/logout/">Log out</a></li>
                {% endif %}
                </ul>
            </nav><!--end of nav-->
            <div class="row">
                {% if cart is defined and cart.items is not empty %}
                <form class="form-horizontal" role="form" method="post" action="/pizzashop/order/updateitems/">
                    <div class="panel panel-default">
                        <div class="panel-heading">Winkelmandje van {{cart.customer.fullname}}</div>
                        <table class="table">
                            <thead>
                                <tr class="active">
                                    <td>Naam</td>
                                    <td>Prijs</td>
                                    <td>Hoeveelheid</td>
                                    <td>Subtotaal</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                {% for key,item in cart.items %}
                                    <tr>
                                        <td>
                                            {{ item.article.name }}
                                            {% if item.extratoppings is not empty %}
                                                {% for topping in item.extratoppings %}
                                                    <br>met extra {{topping.name}}
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td>{{ item.cost }}</td>
                                        <td><input type="number" name="quantity[{{key}}]" value="{{ item.quantity }}" required></td>
                                        <td>{{ item.total }}</td>
                                        <td><a href="/pizzashop/order/removeitem/{{key}}">Delete</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tbody>
                                <tr class="active">
                                    <td>Totaal:</td>
                                    <td></td>
                                    <td></td>
                                    <td>{{cart.total}}</td>
                                    <td><input type="submit" class="btn btn-default" value="Wijzigingen bewaren"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div><!--end of panel shoppingcart-->
                </form>
                {% endif %}
                <div class="well">
                    <a class="btn btn-default" href="/pizzashop/order/selectpizza/">Kies pizza</a>
                    <a class="btn btn-default" href="/pizzashop/order/selectbeverage/">Kies drank</a>
                    {% if cart is defined and cart.items is not empty %}
                        <a class="btn btn-default pull-right" href="/pizzashop/order/delivery/">Ga verder</a>
                    {% endif %}
                </div>
            </div><!--end of content-->
        </div><!--end of container-->
    </body>
</html>
