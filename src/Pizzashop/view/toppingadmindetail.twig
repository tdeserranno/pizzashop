{%extends "template/tmpl_admin.twig"%}

{%block title%}Pizzashop - Beheer - Topping{%endblock%}
{%block content%}
<div class="panel panel-primary">
    <div class="panel-heading">Topping Detail</div>
    <form class="form-horizontal" role="form" method="post" {% if topping is defined and topping is not empty %} action="/pizzashop/toppingadmin/save" {% else %} action="/pizzashop/toppingadmin/add" {% endif %}>
        <input type="hidden" name="id" value="{{ topping.id }}">
        <div class="form-group">
            <label for="name" class="col-lg-1">Naam</label>
            <div class="col-lg-5"><input class="form-control" id="name" name="name" type="text" value="{{ topping.name }}" required></div>
        </div>
        <div class="form-group">
            <label for="price" class="col-lg-1">Prijs</label>
            <div class="col-lg-5"><input class="form-control" id="price" name="price" type="text" value="{{ topping.price }}" required></div>
        </div>
        <div class="well">
                <input type="submit" class="btn btn-primary" value="Opslaan">
        </div>
    </form>
</div><!--end of panel-->
{%endblock%}